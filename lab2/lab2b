weight <- as.numeric(readline("enter your weight (kg): "))
height <- as.numeric(readline("enter your height (m) :"))
bmi <- weight / (height^2)
print(paste("your Bmi is :",bmi))
if (bmi<=18.4){
  print("you are underweight.Please eat more!")
}else if (bmi <=24.9){
  print("you are Normal.keep it up")
}else if (bmi <= 39.9){
  print ("You are overweight. Come on lets diet!")
}else{
  ("you are obese.Bro go diet and hit the gym!")
}

